<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"></Insets>
	</padding>

	<children>
		<ImageView fitWidth="200.0" preserveRatio="true">
			<image>
				<Image url="@images/javafx.jpg"></Image>
			</image>
		</ImageView>

		<HBox alignment="CENTER" spacing="20.0">
			<children>
				<Button text="이전"></Button>
				<Button text="다음">
					<HBox.hgrow>
						<Priority fx:constant="ALWAYS"></Priority>
					</HBox.hgrow>
					<maxWidth>
						<Double fx:constant="MAX_VALUE"></Double>
					</maxWidth>
				</Button>
			</children>
			<VBox.margin>
				<Insets top="10.0"></Insets>
			</VBox.margin>
		</HBox>
	</children>
</VBox>
